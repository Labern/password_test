<h1 class="centre">Login</h1>

<div id="login">
    <%= form_with model: @user, url: user_sessions_path do |f| %>
        <div>
            <%= f.label :name %>
            <%= f.text_field :name %>
        </div>
        <div>
            <%= f.label :password %>
            <%= f.password_field :password %>
        </div>
        <p>
            <%= f.submit %>
        </p>
    <% end %>
</div>